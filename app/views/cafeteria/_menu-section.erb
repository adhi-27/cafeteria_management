<section class="Menus-section">
  <div class="Menu-head">
    <p class= "Menu-title"><%= menu_name %></p>
    <%= form_with(url: "/menus/#{menu_id}", method: "delete") do %>
      <%= image_submit_tag("menucross.png", class: "MenuCrossImage") %>
    <% end %>
  </div>
  <hr>
  <p class= "AddMenu-text">ADD AN ITEM TO THE MENU: </p>
  <%= form_with(url: menu_items_path, method: "POST", class: "AddMenu") do %>
    <%= text_field_tag("name", nil, placeholder: "Item Name", class: "AddMenu-name") %>
    <%= text_field_tag("category", nil, placeholder: "Category", class: "AddMenu-name") %>
    <%= text_field_tag("price", nil, placeholder: "Price", class: "AddMenu-name") %>
    <%= hidden_field_tag("menu_id", menu_id) %>
    <%= button_tag("Add",class: "AddMenu-button") %>
  <% end %>
  <ul>
    <% menu_items.each do |mitem| %>
        <li>
          <div class= "MenuItem">
            <p class= "MenuItem-name"><%= mitem.name %></p>
            <p class= "MenuItem-price">Rs. <%= mitem.price %></p>
            <a href="javascript:void(0)" class="MenuItem-delete">
              <%= form_with(url: "/menu_items/#{mitem.id}", method: "delete") do %>
                <%= image_submit_tag("cross.jpg", class: "CrossImage") %>
              <% end %>
            </a>
          </div>
        </li>
    <% end %>
  </ul>
</section>
