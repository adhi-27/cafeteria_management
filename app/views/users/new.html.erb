<a href= "/" class= "Back">
  <button class="Form-submit">Back</button>
</a>
<section class= "UserNewSign">
  <p class= "NewUsers-title"> Sign-up! </p>
  <% if flash[:error] %>
    <p class="Flash-error"><%= flash[:error] %> </p>
  <% end %>
  <%= form_with url: users_path do |form| %>
    <div class= "Form-section">
      <p class= "FieldText">Name</p>
      <%= form.text_field :name, autofocus: true, class: "TextField" %>
    </div>
    <div class= "Form-section">
      <p class= "FieldText">Email</p>
      <%= form.email_field :email, class: "TextField" %>
    </div>
    <div class= "Form-section">
      <p class= "FieldText">Password: </p>
      <%= form.password_field :password, class: "TextField" %>
    </div>
    <div class= "Form-section">
      <p class= "FieldText">Re-enter password: </p>
      <%= form.password_field :repass, class: "TextField" %>
    </div>
    <div class= "Form-section">
      <%= form.submit "Sign-up!", class: "Form-submit"%>
    </div>
  <% end %>
</section>
